<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_riwayat"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_riwayat"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="22dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_harga_riwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Bayar : Rp. 900.000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telah diterima" />

            <TextView
                android:id="@+id/tv_tanggal_riwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="12 Juni 2018" />

        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_below="@+id/rl_riwayat"
        android:layout_width="match_parent"
        android:background="#d2d1d1"
        android:layout_height="2dp"/>
</RelativeLayout>