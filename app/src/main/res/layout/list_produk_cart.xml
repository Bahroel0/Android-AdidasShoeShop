<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <ImageView
                    android:id="@+id/img_produk_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:src="@drawable/sepatu_superstar_bw_slip_on" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_nama_produk_list_produk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Campus Shoe"
                    android:textColor="#131212"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_kategori_produk_list_produk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_nama_produk_list_produk"
                    android:text="Wanita"
                    android:textColor="#8b8282"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_ukuran_produk_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_kategori_produk_list_produk"
                    android:layout_marginTop="10dp"
                    android:text="Ukuran   : 39"
                    android:textColor="#131212" />

                <TextView
                    android:id="@+id/tv_jumlah_produk_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ukuran_produk_list"
                    android:text="Jumlah  : 1"
                    android:textColor="#131212" />

                <TextView
                    android:id="@+id/tv_harga_produk_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="11dp"
                    android:layout_marginEnd="12dp"
                    android:text="Rp. 499.000"
                    android:textColor="#131212"
                    android:textStyle="bold" />


            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>